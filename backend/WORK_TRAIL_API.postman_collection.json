              "mode": "raw",
              "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description here\",\n  \"priority\": \"High\",\n  \"dueDate\": \"2025-12-31\",\n  \"assignedTo\": [\"USER_ID_1\", \"USER_ID_2\"],\n  \"todoChecklist\": [\n    {\n      \"text\": \"First todo item\",\n      \"completed\": false\n    },\n    {\n      \"text\": \"Second todo item\",\n      \"completed\": false\n    }\n  ],\n  \"attatchments\": [\"https://example.com/file1.pdf\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"]
            }
          }
        },
